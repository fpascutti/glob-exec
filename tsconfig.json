{
  "compilerOptions": {
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "scripthost"
    ]
  }
}
